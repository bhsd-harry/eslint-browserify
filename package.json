{
	"name": "@bhsd/eslint-browserify",
	"version": "8.57.1",
	"description": "ESLint in browser",
	"keywords": [
		"eslint",
		"lint",
		"linter",
		"browser"
	],
	"homepage": "https://github.com/bhsd-harry/eslint-browserify#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/eslint-browserify/issues"
	},
	"license": "MIT",
	"author": "Bhsd",
	"files": [
		"bundle/*.min.js",
		"bundle/*.LEGAL.txt",
		"!bundle/.eslintrc.cjs"
	],
	"browser": "bundle/eslint.min.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/eslint-browserify.git"
	},
	"scripts": {
		"lint:ts": "tsc && eslint --cache . && eslint --no-ignore --no-inline-config build/eslint*.js",
		"lint": "npm run lint:ts",
		"build": "npm run bundle && npm run minify",
		"bundle": "node build.js",
		"minify": "esbuild index.ts --charset=utf8 --bundle --minify --sourcemap --target=es2019 --outfile=bundle/eslint.min.js --legal-comments=external && esbuild index-es8.ts --charset=utf8 --bundle --minify --sourcemap --target=es2017 --outfile=bundle/eslint-es8.min.js --legal-comments=none",
		"test:main": "mocha --require bundle/eslint.min.js",
		"test:es8": "mocha --require bundle/eslint-es8.min.js",
		"test": "npm run test:main && npm run test:es8",
		"clean": "find test/tests/ -type f -name '*.js' | xargs gsed -i 's|\"../../../lib/rule-tester/flat-rule-tester\"|\"../flat-rule-tester\"| ; s|rule = require(.*)|rule = __filename| ; s|parser: require(.*)|parser: require(\"../parser\")|g ; s|arser = require(.*)|arser = require(\"../parser\")|g ; s|\"../../_utils\"|\"../utils\"| ; s|../../fixtures/parsers/.*\\.js|../parser|'; eslint test/tests/*.js"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.2.0",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"esbuild": "^0.25.11",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.1.11",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"globals": "^13.24.0",
		"lodash.merge": "^4.6.2",
		"mocha": "^11.7.4",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=20.19.5"
	}
}
